@model IEnumerable<Cinema.Models.Sala>

<div class="container mt-4">
    <h3>Listado de Salas</h3>
    <a asp-action="Crear" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Añadir Sala
    </a>

    <div class="col-12">
        <div class="card recent-sales overflow-auto">

       

            <div class="card-body">

                <table class="table table-borderless datatable">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Sala</th>
                            <th scope="col">Tipo de Sala</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sala in Model)
                        {
                            <tr>
                                <th scope="row">@sala.Id</th>
                                <td>@sala.Nombre</td>
                                <td>@sala.TipoSala</td>
                                <td>@sala.Precio.ToString("C")</td>
                                <td>
                                    <a asp-action="Detalles" asp-route-id="@sala.Id" class="btn btn-info btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver Sala">
                                        <i class='bx bxs-collection text-white'></i>
                                    </a>
                                    <a asp-action="Editar" asp-route-id="@sala.Id" class="btn btn-warning btn-sm text-white" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form asp-action="Eliminar" asp-route-id="@sala.Id" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta sala?');">
                                        <button type="submit" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!-- End Listado de Salas -->
</div>
